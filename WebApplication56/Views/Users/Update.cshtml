@model WebApplication56.Models.User

@{
    ViewData["Title"] = "login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap Simple Login Form</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

            .login-form form {
                margin-bottom: 15px;
                background: #f7f7f7;
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }

            .login-form h2 {
                margin: 0 0 15px;
            }

        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="login-form">
        <form action="Update" method="post">
            <div class="form-group">
                <i style="justify-content:center; margin-left:80px" class="fas fa-users fa-5x text-primary mb-3"></i>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" />
            </div>


            <div class="form-group">
                <input asp-for="Position" class="form-control" placeholder="المسمي الوظيفي" id="positionText" />
            </div>
            <div class="form-group">
                <!-- Position combobox -->
                <div class="btn-group-toggle" data-toggle="buttons">
                    <table>
                        <tr>
                            <label class="btn btn-secondary" style="width:140px; height:50px; margin-bottom:5px;text-align:center;background-color:#a4e4fc;border-radius:5%;">
                                <input style="text-align:centre;" type="radio" name="position" value="التمريض" onclick="updateTextField(this)"> التمريض
                            </label>
                            <label class="btn btn-secondary" style="width:140px;height:50px; margin-bottom:5px;  background-color:#f4cc8c;">
                                <input type="radio" name="position" value="مدير المخازن
                     " onclick="updateTextField(this)"> مدير المخازن
                            </label>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <label class="btn btn-secondary" style="width:140px;height:50px; margin-bottom:5px;  background-color:#a28eed;">
                                <input type="radio" name="position" value="امين المخزن" onclick="updateTextField(this)"> امين المخزن
                            </label>
                            <label class="btn btn-secondary" style="width:140px;height:50px; margin-bottom:5px; background-color:#fcb0d4;">
                                <input type="radio" name="position" value="كاتب الشطب" onclick="updateTextField(this)"> كاتب الشطب
                            </label>
                        </tr>
                    </table>
                    <label class="btn btn-secondary" style="width:280px; height:30px; margin-bottom:5px; background-color:#90e0b6; min-height: 38px;border-radius: 2px;">
                        <input type="radio" name="position" value="مدير المستشفي" onclick="updateTextField(this)"> مدير المستشفي
                    </label>
                </div>
            </div>

            <div class="form-group">
                
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </div>

            <div class="clearfix">
                <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                <a href="#" class="float-right">Forgot Password?</a>
            </div>


        </form>


        <p class="text-center"><a asp-action="Update" asp-controller="Users">تعديل بيانات المستخدم </a></p>
    </div>
    <script>
        function updateTextField(input) {
            var textField = document.getElementById("positionText");
            textField.value = input.value;
        }
    </script>
</body>
</html>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
